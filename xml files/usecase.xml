<mxfile host="app.diagrams.net">
  <diagram name="Use Case Diagram">
    <mxGraphModel dx="1000" dy="600" grid="1" gridSize="10" guides="1" tooltips="1" connect="1" arrows="1" fold="1" page="1" pageScale="1" pageWidth="2000" pageHeight="2000" math="0" shadow="0">
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>

        <!-- System Boundary -->
        <mxCell id="system" value="Event Management Platform" style="shape=rectangle;whiteSpace=wrap;html=1;dashed=1;" vertex="1" parent="1">
          <mxGeometry x="300" y="50" width="800" height="600" as="geometry"/>
        </mxCell>

        <!-- Actor: User -->
        <mxCell id="actorUser" value="User" style="shape=umlActor;verticalLabelPosition=bottom;verticalAlign=top;" vertex="1" parent="1">
          <mxGeometry x="50" y="200" width="60" height="80" as="geometry"/>
        </mxCell>

        <!-- Actor: Payment Gateway -->
        <mxCell id="actorPG" value="Payment Gateway" style="shape=umlActor;verticalLabelPosition=bottom;verticalAlign=top;" vertex="1" parent="1">
          <mxGeometry x="1150" y="200" width="80" height="80" as="geometry"/>
        </mxCell>

        <!-- Use Case: Login -->
        <mxCell id="UC1" value="Login" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="system">
          <mxGeometry x="150" y="100" width="120" height="50" as="geometry"/>
        </mxCell>

        <!-- Use Case: Browse Events -->
        <mxCell id="UC2" value="Browse/Search Events" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="system">
          <mxGeometry x="150" y="200" width="180" height="50" as="geometry"/>
        </mxCell>

        <!-- Use Case: Make Payment -->
        <mxCell id="UC3" value="Make Payment" style="ellipse;whiteSpace=wrap;html=1;" vertex="1" parent="system">
          <mxGeometry x="400" y="300" width="160" height="50" as="geometry"/>
        </mxCell>

        <!-- Associations -->
        <mxCell id="assoc1" edge="1" source="actorUser" target="UC1" style="endArrow=none;strokeWidth=2;"/>
        <mxCell id="assoc2" edge="1" source="actorUser" target="UC2" style="endArrow=none;strokeWidth=2;"/>
        <mxCell id="assoc3" edge="1" source="actorUser" target="UC3" style="endArrow=none;strokeWidth=2;"/>
        <mxCell id="assoc4" edge="1" source="actorPG" target="UC3" style="endArrow=none;strokeWidth=2;"/>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
